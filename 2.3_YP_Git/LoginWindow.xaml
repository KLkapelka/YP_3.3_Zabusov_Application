<Window x:Class="ProjectManagementApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="200" Width="300">
    <StackPanel Margin="10">
        <Label Content="Имя пользователя:"/>
        <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>
        <Label Content="Пароль:"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
        <Button Content="Войти" Click="BtnLogin_Click" Margin="0,0,0,5"/>
        <Button Content="Регистрация" Click="BtnRegister_Click"/>
    </StackPanel>
</Window> 