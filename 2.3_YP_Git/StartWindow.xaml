<Window x:Class="ProjectManagementApp.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Записная книжка" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="btnLogin" Content="Вход" Width="200" Margin="0,0,0,10" Click="BtnLogin_Click"/>
            <Button Name="btnRegister" Content="Регистрация" Width="200" Margin="0,0,0,10" Click="BtnRegister_Click"/>
            <Button Name="btnExit" Content="Выход" Width="200" Click="BtnExit_Click"/>
        </StackPanel>
    </Grid>
</Window>