<Window x:Class="ProjectManagementApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Имя пользователя:"/>
            <TextBox Name="UsernameTextBox" Margin="0,0,0,10"/>
            <Label Content="Пароль:"/>
            <PasswordBox Name="PasswordBox" Margin="0,0,0,10"/>
            <Button Content="Зарегистрироваться" Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Window>
